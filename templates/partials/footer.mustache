<footer class="footer">
  <div class="footer-container">

    <div class="footer-brand">
      <h2>{{brand}}</h2>
    </div>

    {{#columns}}
      <div class="footer-column {{class}}">
        <h4>{{title}}</h4>

        {{#links}}
          <ul>
            {{#items}}
              <li><a href="{{url}}">{{label}}</a></li>
            {{/items}}
          </ul>
        {{/links}}

        {{#newsletter}}
          <form>
            <input type="email" placeholder="{{placeholder}}">
            <button type="submit">{{button}}</button>
          </form>
        {{/newsletter}}
      </div>
    {{/columns}}

  </div>
</footer>
